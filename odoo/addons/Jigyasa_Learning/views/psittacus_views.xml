<?xml version="1.0" encoding="utf-8"?>
<odoo>
       <record id="view_partner_simple_form" model="ir.ui.view">
            <field name="name">res.partner.simplified.form</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form"/>
            <field name="arch" type="xml">
            
            <xpath expr="//field[@name='type']" position="after">
                    
                    
                    <field name="school_coordinator" placeholder= "school coordinator or Guardian" attrs= "{'invisible': ['|', ('is_company','=', True), ('reg_type','!=', 'student') ]}" options="{'no_create': True, 'no_create_edit':True}"/>
                    <field name="gender" attrs= "{'invisible': [('is_company','=', True)]}"/>
                    <field name="birth_date" widget= "DOB" placeholder= " Enter the date of Brith" attrs= "{'invisible': [('is_company','=', True)]}"/>
                    <field name="age" widget= "Age" placeholder= "Child Age" attrs= "{'invisible': [('is_company','=', True)]}"/>
                    <field name="religion" widget= "Religion" placeholder= "Religion" attrs= "{'invisible': [('is_company','=', True)]}"/>
                    <field name="nationality" widget= "Nationality" placeholder= "Nationality" attrs= "{'invisible': [('is_company','=', True)]}"/>
            
                    </xpath>
            <xpath expr="//field[@name='function']" position="after">
                    <field name="reg_type" placeholder= "Registarion Type" attrs= "{'invisible': [('is_company','=', True)]}"/>
                    
            </xpath>
            <xpath expr="//field[@name='parent_id']" position="attributes">
                    <attribute name="placeholder">Company or School Name</attribute>
            </xpath>
        </field>
        </record>
</odoo>